<% provide(:title, "Help") %>
<h1><%= @customapp.name %></h1>
<p>
<div class="row">
<%= form_for @customapp do |f| %>
    <% @customapp.webpages.each do |webpage| %> 
  		<div class="col-sm-4">
		<h2><b> <%= webpage.name %> </b></h1><br>
  		<%= link_to image_tag(webpage.screenshot_filename, style: "width: 100%", alt: webpage.name),
              webpage_path(:id=>webpage.id) %>
		<%= f.fields_for "webpages[]", webpage do |pf| %>
			<b>Choose page weight:</b><br />
			<%= pf.radio_button :weight, '0' %> 0 <br />
			<%= pf.radio_button :weight, '1' %> 1 <br />
			<%= pf.radio_button :weight, '10' %> 10 <br />
			<b>Or manually input a page weight:</b>
      		<%= pf.text_field :custom_weight, size: 10 %> <br />
		<% end %>
		</div>
	<% end %>
	
	<div><%= submit_tag 'Save' %></div> 
<% end %>
</div>
</p>
